@model studentBatchViewModel
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Update";
}

    <div class="panel panel-default">
        <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Asign a Student a Batch</h3>
        </div>
        <form asp-controller="Batch" asp-action="addStudentBatch" method="post" class="mt-3 panel-body">
            @*<input asp-for="Id" class="form-control" type="hidden" /><span class="text-danger" asp-validation-for="Id"></span>*@

            <div class="form-group row">
                <label asp-for="selectedBatch" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.DropDownList("selectedBatch", new SelectList(Model.batchList.Select(x => new { Value = x.Id, Text = x.Name , @class = "form-control"}), "Value", "Text"))
                    @*@Html.ValidationMessageFor(x => x.selectedBatch, "Select an option", new { @class = "text-danger" });*@
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="selectedStudent" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.DropDownList("selectedStudent", new SelectList(Model.studentList.Select(x => new { Value = x.ID, Text = x.FirstName}), "Value", "Text"))
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6"><button type="submit" class="form-group btn btn-success">Asign Batch</button></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6"><button asp-controller="Batch" asp-action="Index" class="form-group btn btn-primary">Back</button></div>
            </div>
        </form>
    </div>